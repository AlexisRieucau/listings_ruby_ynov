<div class="container">
  <div class="card border-0 shadow my-5">
    <div class="card-body p-5">
  <h1><%= t("users.login.log") %></h1>
<%= form_tag "/#{I18n.locale}/users/sign_in", method: :post do %>
        <input type="email" name="email" placeholder=<%= t("users.login.email") %>><br/>
        <input type="password" name="password" placeholder=<%= t("users.login.password") %>><br/>
        <input class="btn btn-success" type="submit" value=<%= t("users.login.login") %> >
<% end %>
      <a class="btn btn-primary" href="/<%= I18n.locale %>/users/sign_up"><%= t("users.login.signup") %></a>

    </div>
  </div>
</div>