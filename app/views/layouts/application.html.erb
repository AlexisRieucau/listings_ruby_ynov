<!DOCTYPE html>
<html lang="fr">
<head>
  <title>TpRuby</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>


<nav class="navbar navbar-expand-md navbar-dark bg-dark">
  <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="navbar-brand majuscule" href="/">Listing</a>
      </li>
    </ul>
  </div>
  <div class="mx-auto order-0">
    <% if @current_user %>
      <% if @current_user.role == "admin" %>
        <a class="navbar-brand majuscule">Bienvenue  <%= @current_user.first_name %></a>
      <% else %>
        <a class="navbar-brand majuscule">Bienvenue  <%= @current_user.first_name %></a>
      <% end %>
    <% else %>
      <a class="navbar-brand majuscule">Bienvenue visiteur anonyme !</a>
    <% end %>

  </div>
  <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <% if @current_user %>
          <div class="inline">
            <%= form_tag "/users/sign_in", method: :delete do %></div>
              <input class="inline btn btn-danger navbartext" type="submit" value="Logout"/>
              </li>
            <% end %>
            <li class="nav-item">
            <a class="nav-link navbartext " href="/account/contacts">Mon compte</a>
            </li>
        <% else %>
          <li class="nav-item">
            <a class="nav-link navbartext" href="/users/sign_in"> > Login</a>
          </li>
        <% end %>
      <li class="nav-item">
        <select class="form-control col-md-20">
          <option>EN</option>
          <option>FR</option>
        </select>
      </li>
      <li class="nav-item">
        <a class="btn btn-success navbartext" href="/listings/new">Create my listing</a>
      </li>
    </ul>
  </div>
</nav>



<!--<div><%= flash[:info] %></div>-->
<%= yield %>
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
  <ul class="nav">
    <li class="active"><a href="/ideas">Ideas</a></li>
  </ul>

  <p class="navbar-text pull-right">
    <% if user_signed_in? %>
      Logged in as <strong><%= current_user.email %></strong>.
      <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
      <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link' %> |
      <%= link_to "Login", new_user_session_path, :class => 'navbar-link' %>
    <% end %>
  </p>
<% end %>
</body>
</html>
