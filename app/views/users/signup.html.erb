<div class="container">
  <div class="card border-0 shadow my-5">
    <div class="card-body p-5">
      <h1>Inscription</h1>
      <a class="btn btn-primary" href="/">Retourner Ã  l'accueil</a>
      <%= form_tag "/users/sign_up", method: "post" do %>
        <input type="email" name="email" placeholder="email" required/><br/>
        <input type="text" name="first_name" placeholder="First Name" required/><br/>
        <input type="text" name="last_name" placeholder="Last Name" required/><br/>
        <input type="password" name="password" minlength="6" placeholder="Password" required/>
        <label for="password">(6 characters minimum)</label><br/>
        <input type="password" name="password_conf" minlength="6" placeholder="Password" required/>
        <label for="password_conf">Password confirmation</label><br/>
        <input class="btn btn-dark" type="submit" value="Sign up" />
      <% end %>
      <a class="btn btn-primary" href="/users/sign_in">Log in</a>
    </div>
  </div>
</div>